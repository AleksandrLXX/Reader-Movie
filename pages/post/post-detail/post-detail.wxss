.container {
  display: flex;
  flex-direction: column;
}

.header-image {
  width: 100%;
  height: 460rpx;
}

.audio{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left:-51rpx;
  top:180rpx;
  opacity:0.6;

}
.author-date {
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.author-date .avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author-date .author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.author-date .const-txt {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.author-date .date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.tool image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
  width: 90rpx;
  height: 90rpx;
}

.tool::after {
  display: block;
  content: "";
  height: 2rpx;
  width: 700rpx;
  margin: 0 auto;
  background-color: #e5e5e5;
  position: relative;
  top: 45rpx;
  z-index: -100;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
