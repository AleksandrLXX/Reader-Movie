.post-container{
  display: flex;
  flex-direction: column;
  margin:20rpx 0 40rpx 0;
  background-color: #fff;
  border-bottom:1px solid #ededed;
  border-top:1px solid #ededed;
  padding-bottom:5px;
}

.post-author-date{
  margin-top:10rpx 0 20rpx 10rpx;
}

.post-author-date image{
  width:60rpx;
  height: 60rpx;
  vertical-align:middle;
}

.post-author-date text{
  margin-left:20rpx;
  vertical-align: middle;
  margin-bottom:5px;
  font-size:26rpx;
}

.post-title{
  font-size:34rpx;
  font-weight:600;
  color:#333;
  margin-bottom:10px;
  margin-left:10px;
}

.post-image{
width:100%;
height: 340rpx;
margin:0 auto 15px auto;

}

.post-content{
  color:#666;
  font-size:28rpx;
  margin:0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  display:flex;
  flex-direction: row;
  line-height:16px;
  margin-left:10px;
}

.post-like image{
  height:16px;
  width:16px;
  margin-right:8px;
  vertical-align: center;
}

.post-like text{
  vertical-align:center;
  margin-right:8px;
}